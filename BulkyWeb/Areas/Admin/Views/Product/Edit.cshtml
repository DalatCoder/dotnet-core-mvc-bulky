@model Product

@{
    ViewBag.Title = "Edit Product";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Edit Product</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="post">
                <input asp-for="Id" hidden="" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter product title" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Author" class="form-label">Author</label>
                        <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ISBN" class="form-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ListPrice" class="form-label">List Price</label>
                        <input asp-for="ListPrice" class="form-control" type="number" step="0.01" min="1" placeholder="0.00" required />
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Price for 1-50</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="1" placeholder="0.00" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Price50" class="form-label">Price for 50-100</label>
                        <input asp-for="Price50" class="form-control" type="number" step="0.01" min="1" placeholder="0.00" required />
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Price100" class="form-label">Price for >100</label>
                        <input asp-for="Price100" class="form-control" type="number" step="0.01" min="1" placeholder="0.00" required />
                        <span asp-validation-for="Price100" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update Product</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
